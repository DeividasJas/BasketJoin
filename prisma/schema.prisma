datasource db {
  provider = "sqlite" // Using SQLite as the database provider
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                String             @id
  email             String             @unique @default("")
  familyName        String
  givenName         String
  picture           String?
  username          String?
  phoneNumber       String?
  createdAt         DateTime?           @default(now())
  modifiedAt        DateTime?           @default(now())
  posts             Post[]
  gameRegistrations GameRegistration[]
}

model Game {
  id                BigInt             @id @default(autoincrement())
  gameDate          DateTime
  createdAt         DateTime           @default(now())
  modifiedAt        DateTime           @default(now())
  gameRegistrations GameRegistration[]
}

model GameRegistration {
  id         BigInt   @id @default(autoincrement())
  userId     String
  gameId     BigInt
  givenName  String
  familyName String
  email      String?
  createdAt  DateTime @default(now())
  modifiedAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  game Game @relation(fields: [gameId], references: [id])

  @@unique([userId, gameId])
}

model Post {
  id         BigInt   @id @default(autoincrement())
  userId     String
  title      String
  content    String
  createdAt  DateTime @default(now())
  modifiedAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}
