generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id                 String               @id @default(cuid()) @db.VarChar(255)
  email              String               @unique @db.VarChar(255)
  emailVerified      DateTime?
  password           String?              @db.VarChar(255)
  family_name        String?              @db.VarChar(255)
  given_name         String?              @db.VarChar(255)
  username           String?              @db.VarChar(255)
  phone_number       String?              @db.VarChar(50)
  picture            String?              @db.Text
  created_at         DateTime             @default(now())
  modified_at        DateTime             @default(now())
  posts              Post[]
  game_registrations Game_registrations[]
  accounts           Account[]
  sessions           Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @db.VarChar(255)
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user Users @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String   @db.VarChar(255)
  expires      DateTime
  user         Users    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Games {
  id                 Int                  @id @default(autoincrement())
  game_date          DateTime             @unique
  created_at         DateTime             @default(now())
  modified_at        DateTime             @updatedAt
  location_id        Int
  game_registrations Game_registrations[]

  location Locations @relation(fields: [location_id], references: [id])
}

model Game_registrations {
  id          String   @id @default(cuid()) @db.VarChar(255)
  user_id     String   @db.VarChar(255)
  game_id     Int
  given_name  String?  @db.VarChar(255)
  family_name String?  @db.VarChar(255)
  email       String?  @db.VarChar(255)
  created_at  DateTime @default(now())
  modified_at DateTime @default(now())

  user Users @relation(fields: [user_id], references: [id])
  game Games @relation(fields: [game_id], references: [id])

  @@unique([user_id, game_id])
}

model Locations {
  id          Int      @id @default(autoincrement())
  name        String   @db.VarChar(255)
  address     String   @db.VarChar(500)
  city        String   @db.VarChar(255)
  description String?  @db.Text
  created_at  DateTime @default(now())
  modified_at DateTime @default(now())
  price       Int?
  Game        Games[]
}

model Post {
  id          BigInt   @id @default(autoincrement())
  user_id     String   @db.VarChar(255)
  title       String   @db.VarChar(500)
  content     String   @db.Text
  created_at  DateTime @default(now())
  modified_at DateTime @default(now())

  user Users @relation(fields: [user_id], references: [id])
}
